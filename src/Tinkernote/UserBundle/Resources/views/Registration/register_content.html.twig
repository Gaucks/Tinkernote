                    <div class="box-section">
                        <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">

                            {% if form_errors(form.username)|length > 0 %}{% set errors_username = 'has-error' %}{% else %} {% set errors_username = NULL %}{% endif %}
                            <div class="form-group {{ errors_username }}">
                                {{ form_errors(form.username) }}
                                <div class="input-group">
                                    <div class="input-group-addon iga-fosUser-register input-sm"><span class="glyphicon glyphicon-user glyphicon-fos-register"></span></div>
                                    {{ form_widget(form.username,{'attr': {'class': 'form-control input-sm'}}) }}
                                    {% if(errors_username) %}
                                        <span class="glyphicon glyphicon-remove form-control-feedback"></span>
                                    {% endif %}
                                </div>
                            </div>

                            {% if form_errors(form.email)|length > 0 %}{% set errors_email = 'has-error' %}{% else %} {% set errors_email = NULL %}{% endif %}
                            <div class="form-group {{ errors_email }}">
                                {{ form_errors(form.email,{'attr': {'class': 'form-control input-sm'}}) }}
                                <div class="input-group">
                                    <div class="input-group-addon iga-fosUser-register input-sm "><span class="glyphicon glyphicon-envelope"></span></div>
                                    {{ form_widget(form.email,{'attr': {'class': 'form-control input-sm'}}) }}
                                    {% if(errors_email) %}
                                        <span class="glyphicon glyphicon-remove form-control-feedback"></span>
                                    {% endif %}
                                </div>
                            </div>

                            {% if form_errors(form.plainPassword.first)|length > 0 %}{% set errors_password1 = 'has-error' %}{% else %} {% set errors_password1 = NULL %}{% endif %}
                            <div class="form-group {{ errors_password1 }}">
                                {{ form_errors(form.plainPassword.first) }}
                                <div class="input-group">
                                    <div class="input-group-addon input-sm iga-fosUser-register"><span class="glyphicon glyphicon-star-empty"></span></div>
                                    {{ form_widget(form.plainPassword.first,{'attr': {'class': 'form-control input-sm'}}) }}
                                    {% if(errors_password1) %}
                                        <span class="glyphicon glyphicon-remove form-control-feedback"></span>
                                    {% endif %}
                                </div>
                            </div>

                            {% if form_errors(form.plainPassword.second)|length > 0 %}{% set errors_password2 = 'has-error' %}{% else %} {% set errors_password2 = NULL %}{% endif %}
                            <div class="form-group {{ errors_password2 }}">
                                {{ form_errors(form.plainPassword.second) }}
                                <div class="input-group">
                                    <div class="input-group-addon input-sm iga-fosUser-register"><span class="glyphicon glyphicon-star"></span></div>
                                    {{ form_widget(form.plainPassword.second,{'attr': {'class': 'form-control input-sm'}}) }}
                                    {% if(errors_password2) %}
                                        <span class="glyphicon glyphicon-remove form-control-feedback"></span>
                                    {% endif %}
                                </div>
                            </div>

                            {#<div class="form-group">
                                <div class="input-group">
