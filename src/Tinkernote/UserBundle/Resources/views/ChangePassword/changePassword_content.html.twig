{% trans_default_domain 'FOSUserBundle' %}
<form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="fos_user_change_password">

    <div class="row">
        <div class="col-xs-6 col-xs-offset-3">
                <div class="box">
                    <div class="box-header">
                        <div class="title">Modification de mot de passe</div>
                    </div> <!-- box-header -->

                    <div class="box-section">
                        <!-- Mot de passe actuel -->
                        <div class="form-group form-user-profile">
                            <div class="input-group">
                                {{ form_errors(form.current_password) }}
                                <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                                {{ form_widget(form.current_password,{'attr': {'class': 'form-control disabled', 'placeholder': 'Mot de passe actuel' }}) }}
                            </div>
                        </div>
                        <!-- Nouveau Mot de passe -->
                        <div class="form-group form-user-profile">
                            <div class="input-group">
                                {{ form_errors(form.plainPassword.first) }}
                                <div class="input-group-addon">@</div>
                                {{ form_widget(form.plainPassword.first,{'attr': {'class': 'form-control', 'placeholder': 'Nouveau mot de passe'}}) }}
                            </div>
                        </div>
                        <!-- Confirmation du nouveau Mot de passe -->
                        <div class="form-group form-user-profile">
                            <div class="input-group">
                                {{ form_errors(form.plainPassword.second) }}
                                <div class="input-group-addon"><span class="glyphicon glyphicon-eye-close"></span></div>
                                {{ form_widget(form.plainPassword.second,{'attr': {'class': 'form-control', 'placeholder': 'Confirmation'}}) }}
                            </div>
                        </div>

                        <div>
                            {{ form_rest(form) }}
                        </div>
                    </div> <!-- box-section -->
                </div><!-- box  -->
            </div> <!-- col-xs-4 -->

        <div class="col-xs-3">
            <blockquote>
                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ad enim quas quis similique?
                    Asperiores aspernatur consequuntur dicta dolorem in labore natus nostrum numquam!
                    Alias aut dolorem facilis praesentium sint sit.
                </p>
            </blockquote>
        </div>
    </div>
    <div class="row text-center">
        <input type="submit" class="btn btn-success" value="{{ 'change_password.submit'|trans }}" />
    </div>
</form>


