<li class="arrow-box-left gray">
    <div class="avatar">
        {% if a.followed.avatar is not empty %}
            <img src="{{ asset('uploads/avatar/'~a.followed.avatar.path) }}" alt="{{ a.followed.username }}" class="avatar-small img-responsive"/>
        {% else %}
            <img src="{{ asset('bundles/site/images/No_image_available.svg') }}" alt="{{ a.followed.username }}" class="avatar-small img-responsive"/>
        {% endif %}
    </div>

    <div class="info">
          <span class="name">
               {% if app.user.id == a.follower.id %}
                    <span class="label label-success">Abonnement</span>
                    Vous êtes maintenant abonné à
                {% else %}
                   <span class="label label-warning">Abonnement</span>
                   <strong class="normal">
                        <a href="{{ path('fos_user_profile_show', {'id' : a.follower.id}) }}">{{ a.follower.username }}</a></strong>
                    s'est abonné à
              {% endif %}

              {% if app.user.id == a.followed.id %}
                  votre compte
              {% else %}
                  <strong class="normal">
                      <a href="{{ path('fos_user_profile_show', {'id' : a.followed.id}) }}">{{ a.followed.username }}</a>
                  </strong>
              {% endif %}

          </span>
        <span class="time"><i class="icon-time"></i> {{ a.date|date('d M y') }}</span>
    </div>
</li>